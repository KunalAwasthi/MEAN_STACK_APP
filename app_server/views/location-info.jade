extends layout
include __includes.jade
block content
    h1 Starcups
    hr
    .row
        .col-xs.12.col-sm-8
            .row
                .col-xs-12.col-sm-6
                    +getRating(rating)
                    p #{address}
                    .card.card-primary
                        .card-header
                            Opening Hours
                        .card-body
                            each hour in hours
                                p #{hour}
                    .card.card-primary.mt-4
                        .card-header
                            p Facilities
                        .card-body
                            +getfacilities(facilities)
                .col-xs-12.col-sm-6
                    .card.card-primary
                        .card-header
                            p.p-0.m-0 Map Cordinates
                        .card-body
                            img(src='https://maps.googleapis.com/maps/api/staticmap?center=Brooklyn+Bridge,New+York,NY&zoom=13&size=600x300&maptype=roadmap&markers=color:blue%7Clabel:S%7C40.702147,-74.015794&markers=color:green%7Clabel:G%7C40.711614,-74.012318&markers=color:red%7Clabel:C%7C40.718217,-73.998284&key=AIzaSyD1VqbTSDkwop5wWEDMBi5UPHRA4Nb2Lcs',width='100%',height='100%').img.img-responsive.rounded
            .row.mt-4
                .col-lg-12
                    .card.card-primary
                        .card-header
                            p Customer Reviews
                        .card-body
                            .list-group.list-stripped
                                each review in reviews
                                    .list-group-item
                                        +getRating(review.rating)
                                        b
                                            span &nbsp;#{review.name}
                                        small &nbsp;#{review.date}
        .col-xs.12.col-sm-4
            p #{description}